{
  "scripts": {
    "test": "node testRunner.js",
    "solution": "node --max-old-space-size=32000 solutionRunner.js",
    "lint": "eslint ./**/*.js",
    "lint-fix": "eslint ./**/*.js --fix",
    "scaffold": "node scaffold.js"
  },
  "dependencies": {
    "jest": "^24.9.0"
  },
  "eslintConfig": {
    "extends": ["techsmith/es6"],
    "rules": {
      "no-magic-numbers": "off",
      "no-confusing-arrow": "off",
      "no-console": "off",
      "eqeqeq": "off",
      "no-constant-condition": "off",
      "no-labels": "off",
      "no-mixed-operators": "off",
      "no-loop-func": "off"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-techsmith": "^1.3.0"
  }
}
